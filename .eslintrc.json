{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "camelcase": "off",
        "no-console": "off",
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
          }
        ],
        "import/no-unresolved": [
          2,
          {
            "caseSensitive": false,
            "commonjs": true,
            "amd": true
          }
        ],
        "class-methods-use-this": "off",
        "import/prefer-default-export": "off",
        "linebreak-style": "off",
        "no-underscore-dangle": [
          "error",
          {
            "allow": [
              "_id",
              "_doc",
              "_update"
            ]
          }
        ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    }
  }
  